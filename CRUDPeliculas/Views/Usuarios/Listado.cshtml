@model UsuariosListadoViewModel
@{
    ViewData["Title"] = "Listado de usuarios";
    Layout = "../shared/_layout";
}


<h1>Listado de usuarios</h1>

@if (Model.Mensaje != null)
{
    <div class="alert alert-success" role="alert">
        @Model.Mensaje
    </div>
}
@if (Model.Usuarios != null)
{
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Acción</td>
                    <td>Email</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>
                            <button class="btn btn-primary me-2" asp-action="HacerAdmin" asp-route-email="@usuario.Email">Hacer admin</button>
                            <button class="btn btn-secondary me-2" asp-action="RemoverAdmin" asp-route-email="@usuario.Email">Borrar admin</button>
                        </td>
                        <td>@usuario.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
}
